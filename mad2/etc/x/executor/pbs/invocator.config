execute_command: |

  ## write pbs submission script
  mkdir -p pbs
  rm -f "./pbs/{{basename}}.pbs"
  while read line; do
    echo $line >> "./pbs/{{basename}}.pbs"
  done

  ## check if we need to run
  {% if comm.run_when %}
  if [[ ! {{ comm.run_when }} ]]; then
      echo "-- Skipping '{{ basename }}'"
      exit 0
  fi
  {% endif %}

  echo '## starting qsub for: "{{ basename }}"'
  qsub "./pbs/{{basename}}.pbs" > "./pbs/{{basename}}.jobid"
